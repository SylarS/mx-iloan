<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/login_bg"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:visibility="invisible"
        android:background="#00000000"
        app:popupTheme="@style/toolbarMenuStyle" />


    <RelativeLayout
        android:layout_width="311dp"
        android:layout_height="261dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/input_passwd_rl_shape"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/tv_area"
            android:layout_width="271dp"
            android:layout_height="46dp"
            android:layout_alignLeft="@+id/btn_next"
            android:layout_alignStart="@+id/btn_next"
            android:layout_marginBottom="34dp"
            android:layout_marginTop="55dp"
            android:background="@drawable/input_passwd_shape"
            android:gravity="left|center_vertical"
            android:inputType="phone"
            android:paddingLeft="23dp"
            android:textSize="13dp" />
        <EditText
            android:id="@+id/edit_phone_num"
            android:layout_width="271dp"
            android:layout_height="46dp"
            android:layout_alignLeft="@+id/btn_next"
            android:layout_alignStart="@+id/btn_next"
            android:layout_marginBottom="34dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/input_passwd_shape"
            android:gravity="left|center_vertical"
            android:hint="@string/input_phone_num"
            android:maxLength="11"
            android:inputType="phone"
            android:paddingLeft="23dp"
            android:textSize="13dp" />

        <!--        <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/blue_txt"
                    android:layout_marginRight="22dp"
                    android:layout_marginTop="137dp"
                    android:text="@string/forget"
                    android:id="@+id/textView" />-->
        <Button
            android:id="@+id/btn_next"
            android:layout_width="271dp"
            android:layout_height="44dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="187dp"
            android:background="@drawable/login_btn_shape"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp"
        android:background="@drawable/img_title"
        />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="141dp"
        android:background="@drawable/login_icon" />

</RelativeLayout>